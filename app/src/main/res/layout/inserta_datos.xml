<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"></LinearLayout>

    <Spinner
        android:id="@+id/spinner_Series"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"

        />


    <EditText
        android:id="@+id/editText_Serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:hint="Serie"
        android:inputType="textPersonName"
        android:text="B001"
        android:maxLength="4"/>

    <EditText
        android:id="@+id/editText_Folio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Folio"
        android:inputType="number"
        android:text="0"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText_Ruc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:gravity="center"
        android:hint="RUC"
        android:inputType="textPersonName"
        android:text="00000000"
        android:maxLength="11"/>


    <EditText
        android:id="@+id/editText_RazonSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre/Razon Social"
        android:inputType="textPersonName"
        android:maxLength="60"/>


    <EditText
        android:id="@+id/editText_Direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Direccion"
        android:inputType="textPersonName"
        android:maxLength="60"/>

    <EditText
        android:id="@+id/editText_Moneda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Direccion"
        android:inputType="textPersonName"
        android:text="PEN"
        android:maxLength="3"/>



    <Button
        android:id="@+id/button_Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Folio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:text="Agregar" />


</RelativeLayout>
